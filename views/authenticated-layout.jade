!!!
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/screen.css')
    link(rel='stylesheet', href='/stylesheets/effects.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui-1.8.11.custom.css')
    script(type='text/javascript', src='/javascripts/jquery-1.5.1.min.js')
    script(type='text/javascript', src='/javascripts/jquery-ui-1.8.11.custom.min.js')
    script(type='text/javascript', src='/javascripts/jquery.toastmessage.js')
    script(type='text/javascript', src='/javascripts/jquery.tools.min.js')
    script(type='text/javascript', src='/javascripts/application.js')
  body#body
    ul#navigation.shadow
      li: a(href="#", rel="#overlay") Area
      li: a(href="/ct/show/calendar")  Schedule
      li: a(href="#") Lookup
    #document-container.shadow
      -if(showHeader)
        #document-header
          h2 CT Nursing Contrast Sheet
          ul.float-right
            li LastName, FirstName
            li DOB - Age
            li MR# AB0000
           br.clear-left
      #document-body
        -if(typeof error !== "undefined")
          -if(error)
            ul#errors
              -each error in flash
                li= error
        != body
  -if(typeof error === "undefined")
    != partial('layover')